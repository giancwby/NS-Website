---
// Style imports
import '../styles/global.css';
import '../styles/typography.css';

// Component imports
import SecondaryLogo from './SecondaryLogo.astro';
---

<div id="preloader" class="visible">
    <div class="logo-container">
        <SecondaryLogo size="large" type="acronym"/>
    </div>
</div>

<style>
    div {
        background-color: var(--blue);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 99;
        display: flex;
        align-items: center;
        justify-content: center;

        > img {
            display: block;
            width: 100%;
            height: auto;
            opacity: 1;
            transition: var(--transition);
        }
    }

    .visible {
        opacity: 1;
        transition: var(--transition);
    }

    .hidden {
        opacity: 0;
        transition: var(--transition);
    }

    .logo-container {
        position: relative;
        animation: jump 2s ease-in-out infinite;
    }

    @keyframes jump {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }
</style>

<script>
    // Hide the preloader once the page has finished loading
    window.addEventListener('load', function(){
        const preloader = document.getElementById('preloader');
        
        if (preloader.classList.contains("visible")) {
            preloader.classList.remove("visible");
            preloader.classList.add("hidden");
        }

        else {
            preloader.classList.remove("hidden");
            preloader.classList.add("visible");
        }

        setTimeout(function() {
            preloader.style.display = 'none';
        }, 200);
    });
</script>

