<style>

    div {
        display: flex;
        gap: 180px;    
        background-color: var(--blue);
        color: var(--off-white);

        > div {
            display: flex;
            flex-direction: column;
            gap: 48px;
            width: 100%;
    
            > .service {
                display: flex;
                flex-direction: row;
                justify-content: space-between;

                > h2 {
                    color: var(--off-white);
                    transition: var(--transition);
                }

                > img {
                    padding-top: 0px;
                    transition: var(--transition);
                }

                &:hover {
                    > h2 {
                        color: var(--orange);
                    }

                    > img {
                        padding-top: 20px;
                    }
                } 
                    

                > img {
                    width: 23px;
                }
            }
    
            > .border {
                border: solid 2px var(--off-white);
            }
        }
    }
    
    @media (width <= 430px) {
        div {
            gap: 24px;

            > h2 {
                font-size: var(--h5);
            }

            > div {
                gap: 16px !important;

                > .service {
                    > h2 {
                        font-size: var(--h5);
                    }

                    > img {
                        width: 12px;
                    }
                }

                > .hidden-div {
                    flex-direction: column !important;
                    margin-bottom: 16px;

                    > p {
                        font-size: var(--small-body);
                    }
                }
            }
        }
    }

    @media (width <= 1024px) {
        h2 {
            font-size: var(--h3);
        }

        div {
            gap: 80px;

            > div > div > img {
                width: 16px !important;
            }
        }


    }

    .clickable-div:hover {
        cursor: pointer;
    }

    .hidden-div {
        opacity: 0;
        transition: var(--transition);

        &.visible {
            opacity: 1; 
            display: flex;
            flex-direction: row;
            gap: 80px;
        }
    }

    .hidden {
        display: none;
        opacity: 0;
        transition: var(--transition);
    }
</style>

<script>

    const clickableDivs = document.getElementsByClassName('clickable-div')
    const arrow = document.getElementById("arrow");

    Array.from(clickableDivs).forEach((clickableDiv) => {
        clickableDiv.addEventListener("click", function() {
            const hiddenDiv = this.nextElementSibling;
            if (hiddenDiv.classList.contains("visible")) {
                hiddenDiv.classList.remove("visible");
                hiddenDiv.classList.add("hidden");
                arrow.setAttribute('src','/icons/down-white-arrow.svg');
            }

            else {
                hiddenDiv.classList.remove("hidden");
                arrow.setAttribute('src','/icons/up-white-arrow.svg');
                setTimeout(function() {
                    hiddenDiv.classList.add("visible");
                }, 100);
            }
        }
        ) 
    });

   
</script>