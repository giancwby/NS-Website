---
//component imports
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import Preloader from '../components/preloader.astro';
import MobileNav from '../components/MobileNav.astro';

// Props
interface Props {
	title: string;
	navColor: "blue" | "off-white";
}

const { 
	title,
	navColor 
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Preloader />
		<MobileNav />
		<Nav color={navColor}/>
		<slot />
		<Footer />
	</body>
</html>


<script>
	const closeImg = document.getElementById('close');
	const hamburgerImgBlue = document.getElementById('hamburgerBlue')

	closeImg.addEventListener('click', function() {
		const mobileNav = document.getElementById('MobileNav');
		mobileNav.style.left = '450px';
		mobileNav.style.opacity = '0';
	});

	hamburgerImgBlue.addEventListener('click', function () {
		const mobileNav = document.getElementById('MobileNav');
		mobileNav.style.left = '0px';
		mobileNav.style.opacity = '1';
	});
</script>

