---
// Style imports
import '../styles/global.css';
import '../styles/typography.css';

//Component imports
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro'
import Input from '../components/Input.astro';
---

<Layout navColor="blue" title="Contact Us">
    <main>
        <section>
            <div>
                <div>
                    <h2>Reach Out and Join Our Community</h2>
                    <div>
                        <a href="mailto:inquiries@nsdesign.ph" class="medium-body">inquiries@nsdesign.ph</a>
                        <p class="medium-body">+63 917 586 3211</p>
                    </div>
                </div>
                <img src="/images/contactus-hero.png" alt="">
            </div>
        </section>
        <section>
            <div>
                <h1>Want to Meet? <br> Schedule a Meeting</h1>
                <p class="medium-body">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
                <Button color="black" href="" isUppercase={true} text="Book a Meeting"/>
            </div>
        </section>
        <section>
            <div>
                <h2>Drop Us a Message</h2>
                <form target="_blank" action="https://formsubmit.co/gian@nsdesign.ph" method="POST">
                    <div>
                        <div>
                            <Input type="text" placeholder="Name"/>
                            <Input type="email" placeholder="Email"/>
                        </div>
                        <Input type="text-area" placeholder="What's on your mind?"/>
                        <button type="submit">Send</button>
                    </div>
                </form>
            </div>
        </section>
        <section>
            <div>
                <div>
                    <h2>Prefer to Meet in Person? <br> Let's have coffee.</h2>
                    <p class="medium-body">Weâ€™re stationed in Room for Friends. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
                </div>
                <img src="/images/contactus-end.png" alt="">
            </div>
        </section>
    </main>
</Layout>

<style>
    section:nth-of-type(1) {
        background-color: var(--blue);
        padding: 160px 24px 32px 24px;
        color: var(--off-white);

        @media (width >=768px) {
            padding: 200px 80px 120px 80px;
        }
        
        @media (width >=1280px) {
            padding: 200px 120px 120px 120px;
        }

        > div {
            display: flex;
            flex-direction: column;
            max-width: var(--max-width);
			margin: auto;  
            gap: 40px;  
            
            @media (width >=1280px) {
                flex-direction: row;
                gap: 0px;
            }

            > div {
                display: flex;
                flex-direction: column;
                gap: 40px;

                @media (width >=1280px) {
                    gap: 80px;
                }

                > div {
                    display: flex;
                    flex-direction: column;
                    gap: 16px;

                    > a {
                        color: var(--off-white);
                    }
                }

                > h2 {
                    font-size: 4rem;
                    line-height: 100%;

                    @media (width >=1280px) {
                        font-size: var(--h2);
                    }
                }
            }

            > img {
                object-fit: contain;
                max-width: 100%;
                
                @media (width >=1280px) {
                    width: 460px;
                }
            }
        }
    }

    section:nth-of-type(2) {
        background-color: var(--off-white);
        padding: 64px 24px 32px 24px;
        text-align: center;

        @media (width >=768px) {
            padding: 80px;
        }

        @media (width >= 1280px) {
            padding: 160px 120px;
        }

        > div {
            display: flex;
            flex-direction: column;
            gap: 24px;
            align-items: center;
            max-width: var(--max-width);
			margin: auto;

            @media (width >= 1280px) {
                gap: 40px;
            }

            > h1 {
                font-size: var(--h3);

                @media (width >= 768px) {
                    font-size: 4rem;
                }

                @media (width >= 1280px) {
                    font-size: var(--h1);
                }
            }

            > h2 {
                font-size: var(--h4);

                @media (width >= 1280px) {
                    font-size: var(--h2);
                }
            }

            > p {
                font-size: var(--small-body);

                @media (width >= 1280px) {
                    width: 800px;
                    font-size: var(--medium-body);
                }
            }
        } 
    }
    

    section:nth-of-type(3), section:nth-of-type(4) {
        background-color: var(--off-white);
        padding: 80px 120px;

        > div {
            max-width: var(--max-width);
			margin: auto;    
        }
    }

    section:nth-of-type(3) {
        display: none;
        > div {
            display: flex;
            flex-direction: column;
            gap: 32px;

            > form > div {
                display: flex;
                flex-direction: column;
                gap: 32px;

                > div {
                    display: flex;
                    flex-direction: row;
                    gap: 32px;
                }
            }
        }
    }


    section:nth-of-type(4) {
        padding: 32px 24px;

        @media (width >= 768px) {
            padding: 80px;
        }

        @media (width >= 1280px) {
            padding: 0px;
        }

        > div {
            display: flex;
            flex-direction: column;
            gap: 32px;
            
            @media (width >= 1280px) {
                gap: 64px;
            }

            > div {
                display: flex;
                flex-direction: column;
                gap: 16px;

                @media (width >= 1280px) {
                    gap: 32px;
                }

                > p {
                    font-size: var(--small-body);

                    @media (width >= 1280px) {
                        width: 800px;
                        font-size: var(--medium-body);
                    }
                }

                > h2 {
                    font-size: var(--h4);

                    @media (width >= 768px) {
                        font-size: 3rem;
                    }

                    @media (width >= 1280px) {
                        font-size: var(--h2);
                    }
                }
            }
        }

            > img {
                align-self: center;
                width: 100%;
                
                @media (width >= 1280px) {
                    width: 1116px;
                    font-size: var(--medium-body);
                }
            }
        }
    

    button {
        padding: 14px 24px;
        font-family: Apercu-Bold;
        font-size: var(--small-body);
        border-radius: 8px;
        width: fit-content;
        color: var(--black);
        background-color: transparent;
        border: solid 2px var(--black);
        text-transform: uppercase;
        transition: var(--transition);

        &:hover {
            background-color: var(--black);
            color: var(--off-white);
        }
    }
</style>
