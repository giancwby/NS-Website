            </div>
            <img src="/images/contactus-end.png" alt="">
        </div>
    </section>
</Layout>

<style>
    section:nth-of-type(1) {
        background-color: var(--blue);
        padding: 80px 120px 120px 120px;
        color: var(--off-white);

        > div {
            display: flex;
            flex-direction: row;

            > div {
                display: flex;
                flex-direction: column;
                gap: 80px;
            }

            > img {
                width: 460px;
            }
        }
    }

    section:nth-of-type(2) {
        background-color: var(--off-white);
        padding: 160px 120px;
        text-align: center;

        > div {
            display: flex;
            flex-direction: column;
            gap: 40px;
            align-items: center;

            > div {
                display: flex;
                flex-direction: column;
                gap: 8px;
            }
        }
    }

    section:nth-of-type(3), section:nth-of-type(4) {
        background-color: var(--off-white);
        padding: 80px 120px;
    }

    section:nth-of-type(3) {
        > div {
            display: flex;
            flex-direction: column;
            gap: 32px;

            > form > div {
                display: flex;
                flex-direction: column;
                gap: 32px;

                > div {
                    display: flex;
                    flex-direction: row;
                    gap: 32px;
                }
            }
        }
    }


    section:nth-of-type(4) {
        > div {
            display: flex;
            flex-direction: column;
            gap: 64px;

            > div {
                display: flex;
                flex-direction: column;
                gap: 32px;
            }

            > img {
                width: 1116px;
                align-self: center;
            }
        }
    } 

    button {
        padding: 14px 24px;
        font-family: Apercu-Bold;
        font-size: var(--small-body);
        border-radius: 8px;
        width: fit-content;
        color: var(--black);
        background-color: transparent;
        border: solid 2px var(--black);
        text-transform: uppercase;
        transition: var(--transition);

        &:hover {
            background-color: var(--black);
            color: var(--off-white);
        }
    }
</style>
