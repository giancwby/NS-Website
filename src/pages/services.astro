---
// Style imports
import '../styles/global.css';
import '../styles/typography.css';

//Component imports
import Layout from '../layouts/Layout.astro';
import PrimaryLogo from '../components/PrimaryLogo.astro';
import CTA from '../components/CTA.astro';
import Socials from '../components/Socials.astro';
import Dropdown from '../components/Dropdown.astro';
---

<Layout navColor="blue" title="Services">
    <main>
        <section>
            <div>
                <div>
                    <PrimaryLogo color="white" size="medium" />
                    <h1>In a nutshell</h1>
                </div>
                <p class="medium-body">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud.</p>
            </div>
        </section>
        <section>
            <div>
                <Dropdown />
            </div>
        </section>
        <section>
            <div>
                <img src="/images/contactus-hero.png" alt="">
                <div>
                    <h2>Don't see what you're looking for?</h2>
                    <p class="medium-body">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco.</p>
                </div>
            </div>
        </section>
        <CTA />
        <Socials />
    </main>
</Layout>

<style>
    section:nth-of-type(1) {
        background-color: var(--blue);
        padding: 200px 120px 80px 120px;
        color: var(--off-white);

        > div {
            display: flex;
            flex-direction: column;
            gap: 40px;

            max-width: var(--max-width);
			margin: auto;

            > div > h1 {
                margin-top: -20px;
                margin-left: -10px;
            }
        }
    }

    section:nth-of-type(2) {
        background-color: var(--blue);
        
        div {
            padding: 80px 120px 120px 120px;
            display: flex;
            flex-direction: column;
            gap: 108px;
            max-width: var(--max-width);
            margin: auto;
        }
    }

    section:nth-of-type(3) {
        padding: 120px 120px;
        background-color: var(--off-white);
        color: var(--black);

        > div {
            display: flex;
            flex-direction: row;
            justify-content: space-between;

            max-width: var(--max-width);
			margin: auto;

            > img {
                width: 410px;
            }

            > div {
                display: flex;
                flex-direction: column;
                gap: 40px;
                width: 740px;
            }
        }
    }

    @media (width <= 430px) {
        section:nth-of-type(1) {
            padding: 136px 24px 32px 24px; 

            > div {
                gap: 40px;

                > div {
                    > h1 {
                        font-size: var(--h3);
                        margin: 0;
                    }
                }

                > p {
                    font-size: var(--small-body);
                }
            }
        }

        section:nth-of-type(2) {
            > div {
                padding: 16px 24px 40px 24px; 
                gap: 24px;
            }
        }

        section:nth-of-type(3) {
            padding: 48px 16px; 
            
            > div {
                gap: 16px;
                flex-direction: column;

                > img {
                    max-width: 90%;
                }

                > div {
                    gap: 16px;
                    width: auto;

                    > h2 {
                        font-size: var(--h3);
                    }

                    > p {
                        font-size: var(--small-body);
                    }
                }
            }
        }
    }
</style>